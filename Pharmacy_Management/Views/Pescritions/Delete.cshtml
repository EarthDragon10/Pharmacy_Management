@model Pharmacy_Management.Models.Pescritions

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100 px-3 py-5">
    <h1><span class="text-grey">Dashboard > Lista Ricette Mediche</span> > Cancellazione Medicinale</h1>

    <h3>Sei Sicuro di volerlo cancellare?</h3>
    <div>

        <div class="row mt-4">
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Nome Cliente</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.Customers.FirstName</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Identificativo della Pescrizione</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.IdentifierPrescription</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-4">
                <input type="submit" value="Cancella" class="btn btn-success me-3" />
                @Html.ActionLink("Torna Indietro", "Index", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>

