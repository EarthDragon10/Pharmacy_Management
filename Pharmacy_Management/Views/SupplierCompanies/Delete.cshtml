@model Pharmacy_Management.Models.SupplierCompanies

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100 px-3 py-5">
    <h1><span class="text-grey">Dashboard > Ditte Fornitrici</span> > Cancella</h1>
    <h3>Sei Sicuro di volerlo cancellare?</h3>
    <div>
        <div class="row mt-4">
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Info Ditta Fornitrice</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.NameCompany</h5>
                            <p class="card-text">Nome della Ditta</p>
                        </div>
                        <div>
                            <h5 class="card-title">@Model.Address</h5>
                            <p class="card-text">Sede</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Contatti</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.Mail</h5>
                            <p class="card-text">E-Mail</p>
                        </div>
                        <div>
                            <h5 class="card-title">@Model.PhoneNumber</h5>
                            <p class="card-text">Numero Telefonico</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Cancella" class="btn btn-success" /> 
        @Html.ActionLink("Torna Indietro", "Index", null, new { @class = "btn btn-primary" })
    </div>
        }
    </div>

</div>
