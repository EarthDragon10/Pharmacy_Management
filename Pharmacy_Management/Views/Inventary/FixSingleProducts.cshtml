@model Pharmacy_Management.Models.Medicines

@{
    ViewBag.Title = "FixSingleProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FixSingleProducts</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Model.NameMedicine</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.IdMedicine)
    @Html.HiddenFor(model => model.IdTypeProduct)
    @Html.HiddenFor(model => model.IdTypeMedicine)
    @Html.HiddenFor(model => model.DescriptionUse)
    @Html.HiddenFor(model => model.UrlImg)
    @Html.HiddenFor(model => model.IdSupplierCompanies)
    @Html.HiddenFor(model => model.price)
    @Html.HiddenFor(model => model.IdDrawer)

    <div class="form-group">
        <p>Imposta la quantitá da ordinare</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salva la nuova quantitá" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
