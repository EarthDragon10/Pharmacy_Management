@model Pharmacy_Management.Models.TypeProduct

@{
    ViewBag.Title = "DeleteGroupMedicine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100  px-3 py-5">
    <h1><span class="text-grey">Inventario > Lista Categorie Di Prodotti</span> > Crea Categoria</h1>

    <h3 class="text-danger">Sei sicuro di cancellarlo?</h3>
    <div>
        <div class="row mt-4">
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Prodotto Ordinato</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.DescTypeProduct</h5>
                            <p class="card-text">Tipologia di Prodotto</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Torna Indietro", "ListGroupsMedicine", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>