@model Pharmacy_Management.Models.Medicines

@{
    ViewBag.Title = "DetailsMedicine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="vh-100 px-3 py-5 ga-5">
    <h1><span class="text-grey">Inventario > Lista di Medicine</span> > @ViewBag.NameProduct </h1>
    <p>Medicine dispinibili nei casetti.</p>

    <a href="#" class="btn btn-primary mb-3">Modifica Medicinale</a>

    <img src="~/Content/Assets/Img/Medicines/@Model.UrlImg" alt="Alternate Text" />
    <div class="card">
        <h5 class="card-header text-center">Info Medicina</h5>
        <div class="card-body d-flex justify-content-around text-center">
            <div>
                <h5 class="card-title">@Model.Drawers.Identifier</h5>
                <p class="card-text">N° Cassetto</p>
            </div>

            <div>
                <h5 class="card-title">@Model.Stock</h5>
                <p class="card-text">Quantitá</p>
            </div>

            <div>
                <h5 class="card-title">@Model.price</h5>
                <p class="card-text">Prezzo</p>
            </div>
        </div>
    </div>

    <div class="card my-3">
        <h5 class="card-header text-center">Tipo e Autorizzazioni</h5>
        <div class="card-body d-flex justify-content-around text-center">
            <div>
                <h5 class="card-title">@Model.TypeProduct.DescTypeProduct</h5>
                <p class="card-text">Tipo Prodotto</p>
            </div>

            <div>
                <h5 class="card-title">@Model.SupplierCompanies.NameCompany</h5>
                <p class="card-text">Ditta Fornitrice</p>
            </div>

            <div>
                <h5 class="card-title">@Model.TypeMedicine.DescTypeMedicine</h5>
                <p class="card-text">Autorizzazioni</p>
            </div>

        </div>
    </div>


