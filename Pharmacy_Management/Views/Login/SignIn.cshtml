@model Pharmacy_Management.Models.Users

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="login-style">
        <h2 class="mb-3">Login</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-center" })
            <div class="">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type ="password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-column justify-content-center align-items-center" >
            <div class="my-2">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>

            <div>
                <p>Non sei ancora registrato? <a href="~/Login/RegistrationEmployee">Ecco il link!</a></p>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
