@model Pharmacy_Management.Models.Employees

@{
    ViewBag.Title = "RegistrationEmployee";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm("RegistrationEmployee", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="login-style">
        <h2>Registrazione Dipendente</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Pwd, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.EditorFor(model => model.Pwd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.FileImg, htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.TextBoxFor(model => model.FileImg, new { @class = "form-control", @type = "file", @accept = "image/jpg, image/jpeg, image/png" } )
                @Html.ValidationMessageFor(model => model.UrlImg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.IdRole, "IdRole", htmlAttributes: new { @class = "control-label text-center" })
            <div class="text-center">
                @Html.DropDownList("IdRole", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdRole, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}s

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
