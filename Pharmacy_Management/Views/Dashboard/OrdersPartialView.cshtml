<div class="card my-3">
    <div class="card-header">
        <h4><span class="fw-bold me-5">Ordini</span> <a class="text-grey anchor-style" href="~/Inventary/Index">Vai agli Ordini >></a></h4>
    </div>
    <div class="card-body d-flex justify-content-between">
        <div class="d-flex flex-column">
            <h4 class="fw-bold">@ViewBag.OrderTotal</h4>
            <p class="card-text">Numero totale di Ordini</p>
        </div>

        <div class="d-flex flex-column">
            <h4 class="fw-bold">@ViewBag.TotalOrder</h4>
            <p class="card-text">Totale Incasso</p>
        </div>
    </div>
</div>