@model IEnumerable<Pharmacy_Management.Models.TypeMedicine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100 px-3 py-5">
    <h1><span class="text-grey">Admin</span> > Tipologia di Medicina</h1>
    <h4>Lista di Categorie</h4>
    <a href="~/TypeMedicines/Index" class="btn btn-success mb-4">+ Nuova categoria</a>

    <table class="table tables_pharmacy blue-border">
        <tr class="bg-blue">
            <th>
                @Html.DisplayNameFor(model => model.DescTypeMedicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredPescrition)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DescTypeMedicine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredPescrition)
                </td>
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = item.IdTypeMedicine }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Dettagli", "Details", new { id = item.IdTypeMedicine }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Cancella", "Delete", new { id = item.IdTypeMedicine }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

</div>
