@model Pharmacy_Management.Models.TypeMedicine

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100 px-3 py-5">
    <h1><span class="text-grey">Admin</span> > Cancella Tipologia di Medicina</h1>
    <h4>Tipologia del Medicinale</h4>

    <h3>Sei Sicuro di volerlo cancellare?</h3>
    <div>
        <div class="row mt-4">
            <div class="col">
                <div class="card">
                    <h5 class="card-header text-center">Tipologia Medicinale</h5>
                    <div class="card-body d-flex justify-content-around text-center">
                        <div>
                            <h5 class="card-title">@Model.DescTypeMedicine</h5>
                            <p class="card-text">Descrizione</p>
                        </div>
                        <div>
                            <h5 class="card-title">@Html.EditorFor(model => model.DescTypeMedicine)</h5>
                            <p class="card-text">Richiesta Ricetta Medica</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color mt-4">
        <input type="submit" value="Cancella" class="btn btn-success" />
        @Html.ActionLink("Torna Indietro", "Index", null, new { @class = "btn btn-primary" })
    </div>
        }
    </div>

</div>
